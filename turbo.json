{
	"$schema": "https://turborepo.org/schema.json",
	"pipeline": {
		"build": {
			"cache": false,
			"dependsOn": ["^build", "prebuild"]
		},
		"test": {
			"cache": true,
			"inputs": ["src/**/*.js", "src/**/*.ts", "src/**/*.tsx"],
			"dependsOn": ["build"],
			"outputs": []
		},
		"typecheck": {
			"cache": true,
			"inputs": ["src/**/*.js", "src/**/*.ts", "src/**/*.tsx"],
			"outputs": []
		}
	},
	"globalDependencies": [".env"]
}
